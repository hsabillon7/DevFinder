<main class="contenedor">
    <form action="/editarPerfil" method="post" class="default-form" enctype="multipart/form-data">
        <div class="campo">
            <label for="nombre">Nombre</label>
            <input type="text" name="nombre" placeholder="Ingresa tu nombre" value="{{usuario.nombre}}" required>
        </div>
        <div class="campo">
            <label for="email">Correo electrónico</label>
            <input type="email" name="email" placeholder="Ingresa tu dirección de correo electrónico"
                value="{{usuario.email}}" required>
        </div>
        <div class="campo">
            <label for="password">Contraseña</label>
            <input type="password" name="password" placeholder="Ingresa tu contraseña">
        </div>
        <div class="campo">
            <label for="imagen">Imagen de perfil</label>
            <input type="file" name="imagen">
            <img src="/uploads/perfiles/{{usuario.imagen}}" class="admin-perfil">
        </div>
        <div class="campo">
            <input type="submit" value="Guardar cambios" class="btn btn-azul">
        </div>
    </form>
</main>